<!DOCTYPE html>
<html>
<head>
  <title>Edit Plant</title>
  </head>
<body>
  <div class="container">
    <h1>Edit Plant</h1>
    <form action="/plants/<%= plant._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= plant.name %>">
      </div>
      <div class="mb-3">
        <label for="description">Description:</label>
        <textarea class="form-control" id="description" name="description"><%= plant.description %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Update Plant</button>
    </form>
  </div>
  </body>
</html>
